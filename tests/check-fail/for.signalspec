@test(#up, ())
with Seq(#x, _) def main() = seq {
//# expected a single value
    for x = () {
//          ^^ found `()`

        val(x)
    }
}


@test(#up, ())
with Seq(#x, _) def main() = seq {
//# expected vector
    for x = #a {
//          ^^ found `#a`
        val(x)
    }
}

@test(#up, ())
with Seq(#x, _) def main() = seq {
//# `for` loop vectors must be the same width
    for x = [#a, #b], y = [#x], z = [#t, #u] {
//          ^^^^^^^^ vector of width 2
//                        ^^^^ vector of width 1
        val(y)
    }
}

