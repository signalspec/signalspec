let bit = 0 | 1

with Seq([bit, bit, bit])
def test_signed() = Seq(-4..3) {
        on val(x) { val(signed(3, x)) }
        on val(x) { val(signed(3, x)) }
        on val(x) { val(signed(3, x)) }
}

test @both(Seq([bit, bit, bit])) { val([1, 0, 1]); val([0, 0, 1]); val([0, 0, 0]) } | test_signed() | { val(-3); val(1); val(0) };
