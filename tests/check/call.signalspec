with Seq(#a|#b, dir)
def main(var(dir) a, var(dir) b) = {
    val(a)
    other(a, b)
    val(b)
}

with Seq(#a|#b, dir)
def other(var(dir) x, var(dir) y) = {
    val(x)
    val(y)
}

test @both(Seq(#a|#b, _)){ val(#a); val(#a); val(#b); val(#b) } | main(#a, #b);
test fail @up(Seq(#a|#b, _)){ val(#a); val(#a) } | main(#a, #b);
