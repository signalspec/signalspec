let t = #a|#b|#c|#d

with Seq(_:t, dir)
def main(var(dir) x) = {
    val(#a)
    val(#b)
    repeat dir x {
        val(#c)
        val(#d)
    }
    val(#a)
}

@test(#both, (#a, #b, #a))
with Seq(_:t, _) def test1() = { main(0) }

@test(#up_fail, (#a, #b, #a))
@test(#both, (#a, #b, #c, #d, #a))
with Seq(_:t, _) def test2() = { main(1) }

@test(#both, (#a, #b, #c, #d, #c, #d, #a))
with Seq(_:t, _) def test2() = { main(2) }

@test(#up_fail, (#a, #b, #c, #a))
@test(#up_fail, (#a, #b, #c, #d))
with Seq(_:t, _) def test2() = { main(_) }
