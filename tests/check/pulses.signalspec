with Seq(_:#h|#l, dir)
def pulses() = new Seq(1..10, dir) {
    repeat {
        on val(len) {
            val(#l)
            repeat dir <: 0 {
                val(#l)
            }
            val(#h)
            repeat dir len-1 {
                val(#h)
            }
        }
    }
}

@test(#both, (#l, #h, #h, #l, #h, #h, #h))
@test(#up, (#l, #h, #h, #l, #l, #l, #h, #h, #h))
with Seq(_:#h|#l, _) def test1() = { pulses() | { val(2); val(3) } }
